<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="85dp"
    android:background="#FFFFFF"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/list_item_device_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@drawable/my"/>

    <TextView
        android:id="@+id/list_item_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="77dp"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="#4A4A4A"
        android:text="设备"/>

    <Button
        android:id="@+id/list_item_device_action"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_marginRight="12.5dp"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/ilop_connect_btn_selector"
        android:textColor="#4690F0"
        android:textSize="13sp"
        android:text="连接"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EFEFEF"></View>
</FrameLayout>
