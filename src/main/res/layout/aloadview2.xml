<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aloadview2_linearlayout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/aloadview2_imageview_icon"
        android:layout_width="44dp"
        android:layout_height="44dp" />

    <TextView
        android:id="@+id/aloadview2_textview_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/aloadview2_textview_retry"
        android:layout_width="102dp"
        android:layout_height="34dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/aloadview2_retry_background_white"
        android:gravity="center" />

</LinearLayout>