<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_button_ota_container_relativelayout"
    android:layout_width="327dp"
    android:layout_height="54dp"
    android:clickable="true"
    android:background="@drawable/ilop_mine_ota_button_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_button_ota_progress_imageview"
            android:visibility="visible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ilop_mine_icon_ota_progress" />

        <TextView
            android:id="@+id/mine_button_ota_msg_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mine_color_FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>