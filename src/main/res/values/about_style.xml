<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="About_Info_TextView">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:layout_marginRight">21dp</item>
    </style>

    <style name="About_Info_Value_TextView" parent="About_Info_TextView">
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center|right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/color_555555</item>
    </style>
</resources>